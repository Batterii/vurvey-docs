{
  "name": "vurvey-docs",
  "version": "1.0.0",
  "description": "Vurvey user onboarding documentation with auto-updating screenshots",
  "type": "module",
  "scripts": {
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "update:screenshots": "node scripts/capture-screenshots.js",
    "update:all": "npm run update:screenshots && npm run docs:build",
    "test": "node --test test/**/*.test.js",
    "test:qa": "node scripts/qa-test-suite.js",
    "test:qa:headed": "HEADLESS=false node scripts/qa-test-suite.js",
    "test:qa:analyze": "node scripts/qa-failure-analyzer.js",
    "test:qa:web-manager-playwright": "bash scripts/run-web-manager-playwright-smoke.sh",
    "pipeline": "bash scripts/run-local-pipeline.sh",
    "pipeline:quick": "bash scripts/run-local-pipeline.sh --skip-screenshots --quick",
    "pipeline:analyze-only": "bash scripts/run-local-pipeline.sh --skip-screenshots --skip-qa --skip-remediate",
    "lint:docs": "node scripts/docs-lint.js",
    "test:docs": "npm run lint:docs",
    "sync:nightly": "npm run update:screenshots && npm run test:qa",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Batterii/vurvey-docs.git"
  },
  "keywords": [
    "vurvey",
    "documentation",
    "onboarding"
  ],
  "author": "Vurvey Labs",
  "license": "MIT",
  "devDependencies": {
    "husky": "^9.1.7",
    "puppeteer": "^23.0.0",
    "vitepress": "^1.5.0",
    "vue": "^3.5.0"
  }
}
